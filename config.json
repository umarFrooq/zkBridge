{
  "deviceIP": "192.168.18.201",
  "devicePort": 4370,
  "deviceTimeout": 5000,
  "hrmServer": {
    "baseURL": "http://localhost:4000/v1",
    "apiKey": "your-api-key-here",
    "endpoints": {
      "attendance": "/checkin/machine-checkin",
      "employees": "/employees",
      "sync": "/sync"
    },
    "timeout": 10000,
    "retryAttempts": 3,
    "retryDelay": 2000
  },
  "syncInterval": 60000,
  "batchSize": 100,
  "enableRealTime": true,
  "autoStart": true,
  "fieldMapping": {
    "employeeId": "deviceUserId",
    "timestamp": "recordTime",
    "type": "attendanceType",
    "deviceId": "deviceId"
  },
  "logLevel": "INFO",
  "logPath": "./logs/",
  "backupPath": "./backup/",
  "serviceName": "ZKTeco-HRM-Service",
  "serviceDescription": "ZKTeco to HRM Integration Service"
}
